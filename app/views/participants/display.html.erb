<% if flash[:success] %>
   <div class="alert alert-success alert-dismissible show" role="alert">
     <span class="error"><%= flash[:success] %></span>
     <button type="button" class="close" data-dismiss="alert" aria-label="Close">
       <span aria-hidden="true">&times;</span>
     </button>
   </div>
<% end %>

<%= render 'navbar' %>

<div class="mx-4 my-4">
  <p id="notice"><%= notice %></p>

  <h1>Listing Participants</h1>

  <table style="width:65%">
    <thead>
      <tr>
        <th>Project ID</th>
        <th>Participant Email</th>
      </tr>
    </thead>

    <tbody>
      <% @participants.each do |participant| %>
        <tr>
          <td> <%= participant.project_id %> </td>
          <td> <%= participant.email %> </td>
          <td> <%= link_to 'Edit', edit_participant_path(participant.id), class:"btn btn-primary" %></td>
          <td> <%= link_to 'Destroy', participant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Participant', new_participant_path %>
</div>
