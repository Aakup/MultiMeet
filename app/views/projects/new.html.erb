<% @title = "Create New Project - MultiMeet" %>
<%= render 'layouts/navbar' %>
<%= render 'layouts/alerts' %>

<div class="user-container">

    <%= form_for(@project) do |f| %>
      <% if @project.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

          <ul>
            <% @project.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% else %>
      <div class="jumbotron shadow white-bg">
        <h4>Enter name of new project</h4>
        <div class="form-group">
          <%= f.text_field :project_name, placeholder: "Project Name", class: "form-control"%>
        </div>
      </div>
      <% end %>
      <div class="actions jumbotron white-bg shadow">
        <%= f.submit "Create Project", class:"btn btn-primary", style:"width=100%"  %>
        <%= f.submit "Choose Times", class: "btn btn-primary" %>
        <%= link_to 'Back', projects_path, class:"btn btn-primary" %>
      </div>
    <% end %>
  
</div>
