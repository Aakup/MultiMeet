<% if flash[:success] %>
   <div class="alert alert-success alert-dismissible show" role="alert">
     <span class="error"><%= flash[:success] %></span>
     <button type="button" class="close" data-dismiss="alert" aria-label="Close">
       <span aria-hidden="true">&times;</span>
     </button>
   </div>
<% end %>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
   <ul class="navbar-nav mr-auto">
      <a class="navbar-brand" href="/">MultiMeet</a>
   </ul>
   <ul class="navbar-nav">
      <% if logged_in? %>
         <li class="nav-item"><%= link_to 'Log Out', logout_path, method: :delete, class: "btn btn-outline-primary" %></li>
      <% else %>
         <li class="nav-item mx-2"><%= link_to 'Log In', login_path, class: "btn btn-outline-primary" %></li>
         <li class="nav-item mx-2"><%= link_to 'Sign Up', signup_path, class: "btn btn-outline-primary" %></li>
      <% end %>
   </ul>
</nav>

<% if logged_in? %>  
   <div>Welcome to MultiMatch!</div>
   <div>All Projects</div> 
<% else %>
   <div>
      <p>
      No projects available.
      <br></br>
      Please login or sign up for a new account!
   </p>
   </div>
<% end %>

