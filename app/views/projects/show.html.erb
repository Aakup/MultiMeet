<%= render 'layouts/navbar' %>
<p id="notice"><%= notice %></p>

<ul>
  <li><b>Name:</b> <%= @project.project_name %></li>
  <li><b>Participants:</b> <%= @project.participants.to_json %></li>
  <li><b>Duration (minutes):</b> <%= @project.duration %></li>
  <li><%= link_to 'Matching', project_matching_path(@project) %></li>
  <li><%= link_to 'Times', project_times_path(@project) %></li>
</ul>

<%= link_to 'Back', projects_path, class:"btn btn-secondary" %>
<%= link_to 'Edit', edit_project_path(@project), class:"btn btn-primary"%>
<%= link_to 'Roster', project_participants_path(@project), class:"btn btn-success" %>
