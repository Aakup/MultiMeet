<%= render 'navbar' %>
<div class="jumbotron">
  <p id="notice"><%= notice %></p>
  <h1>List of Times</h1>
  
  <% if flash[:message] %>
     <div class="alert alert-success alert-dismissible show" role="alert">
       <strong>Added:</strong> <%= flash[:message] %>
       <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
       </button>
     </div>
  <% end %>
  <% if flash[:error] %>
    <div class="alert alert-danger alert-dismissible show" role="alert">
      <div class="error"><strong>Unable to add:</strong> <%= flash[:error] %></div>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
    </div>
  <% end %>
  
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @times.each do |time| %>
        <tr>
        <% if time.is_date %>
          <td>Date <%= time.date_time.to_date %></td>
        <% else %>
          <td>Time <%= time.date_time %></td>
        <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  
  <%= link_to 'Back to project', project_path(@project_id), class:"btn btn-secondary"%>
  <%= link_to 'Add new time', new_project_time_path, class:"btn btn-primary"%>
</div>