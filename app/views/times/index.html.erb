<%= render 'navbar' %>
<div class="jumbotron">
  <p id="notice"><%= notice %></p>
  <h2>Project Times</h2>
  
  <% if flash[:message] %>
     <div class="alert alert-success alert-dismissible show" role="alert">
       <strong>Added:</strong> <%= flash[:message] %>
       <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
       </button>
     </div>
  <% end %>
  <% if flash[:error] %>
    <div class="alert alert-danger alert-dismissible show" role="alert">
      <div class="error"><strong>Unable to add:</strong> <%= flash[:error] %></div>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
    </div>
  <% end %>
  
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @times.each do |time| %>
        <tr>
        <% if time.is_date %>
            <td class="list-group-item list-group-item-primary py-2"><%= time.date_time.to_date %> </td>
        <% else %>
            <td class="list-group-item py-2"><%= time.date_time %></td>
        <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  
  <%= link_to 'Back to project', project_path(@project_id), class:"btn btn-secondary"%>
  <% if !@times.empty? %>
    <%= link_to 'Reselect Times', destroy_project_times_path, method: :delete, data: {confirm: "Are you sure? \n - Choosing 'OK' will delete all saved times for the project"}, class:"btn btn-danger" %>
  <% end %>
  <%= link_to 'Add new time', new_project_time_path, class:"btn btn-primary"%>
</div>